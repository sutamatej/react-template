{
  "name": "react-template",
  "version": "0.0.1",
  "description": "Template for creating standalone React applications with Typescript",
  "main": "index.js",
  "scripts": {
    "dev": "node build.dev.mjs",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test": "jasmine --config=jasmine.json",
    "typecheck": "npx tsc --noEmit",
    "validate": "npm run typecheck && npm run validate:translations && npm run test && npm run lint",
    "validate:translations": "node ./src/data/locale/validate.mjs"
  },
  "author": "Matej Suta",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jasmine-dom": "1.3.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jasmine": "5.1.8",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/testing-library__jasmine-dom": "1.3.4",
    "esbuild": "0.25.7",
    "jasmine": "5.8.0",
    "jsdom": "26.1.0",
    "oxlint": "1.7.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "zod": "4.0.5"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
}

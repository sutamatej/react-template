{
  "name": "react-template",
  "version": "0.0.1",
  "description": "Template for creating standalone React applications with Typescript",
  "main": "index.js",
  "scripts": {
    "dev": "node build.dev.mjs",
    "first": "node _first.mjs",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test": "tsx --import=./src/__setup/testSetup.mjs --experimental-test-module-mocks --test \"**/*.test.ts?(x)\"",
    "test:ci": "tsx --import=./src/__setup/testSetup.mjs --experimental-test-module-mocks --test --test-reporter=dot \"**/*.test.ts?(x)\"",
    "typecheck": "npx tsc --noEmit",
    "validate": "npm run typecheck && npm run validate:translations && npm run test:ci && npm run lint",
    "validate:translations": "node ./src/data/locale/validate.mjs"
  },
  "author": "Matej Suta",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "25.0.0",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/testing-library__jasmine-dom": "1.3.4",
    "esbuild": "0.27.0",
    "jsdom": "27.2.0",
    "oxlint": "1.30.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "zod": "4.1.13"
  },
  "dependencies": {
    "react": "19.2.0",
    "react-dom": "19.2.0"
  }
}
